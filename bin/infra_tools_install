# File: infra_tools_install 

SCRIPTDIR=$(dirname "$(readlink -f "$0")")
LIBDIR=${SCRIPTDIR}/../lib
RESDIR=${SCRIPTDIR}/../resources

# Create ssh keys folder
mkdir -p ${HOME}/.local/bin

for INFRA_TOOL in $(ls ${SCRIPTDIR}); do
    [ -f ${HOME}/.local/bin/$(basename ${INFRA_TOOL} ) ] && continue
    ln -s ${SCRIPTDIR}/${INFRA_TOOL} ${HOME}/.local/bin/$(basename ${INFRA_TOOL} )
done
exit 0